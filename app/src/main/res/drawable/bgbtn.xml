<?xml version="1.0" encoding="utf-8"?>

<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#D65F33">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="#2b2828" />
            <corners android:radius="@dimen/activity_horizontal_margin" />
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="#262323"
                android:startColor="#262323"
                android:type="linear" />
            <corners android:radius="@dimen/activity_vertical_margin" />
        </shape>
    </item>
</ripple>